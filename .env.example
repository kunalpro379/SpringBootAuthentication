# ===============================================
# AUTHENTICATION SERVER ENVIRONMENT VARIABLES
# ===============================================
# Copy this file to .env and configure your values
# Note: Add .env to .gitignore to keep secrets safe

# ===== DATABASE CONFIGURATION =====
# Choose your database: h2, postgresql, mysql, mongodb
DATABASE_TYPE=h2
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=authdb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# MongoDB specific (when DATABASE_TYPE=mongodb)
MONGO_AUTH_DB=admin
MONGO_REPLICA_SET=
MONGO_SSL_ENABLED=false

# ===== JWT CONFIGURATION =====
JWT_SECRET=mySecretKey123ForAuthenticationServer2024!@#$%^&*()
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=604800000

# ===== EMAIL CONFIGURATION =====
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ===== OAUTH2 CONFIGURATION =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===== APPLICATION CONFIGURATION =====
APP_NAME=Authentication Server
APP_VERSION=1.0.0
APP_DESCRIPTION=Complete Authentication Server with JWT, OAuth2, and 2FA
FRONTEND_URL=http://localhost:3000
APP_BASE_URL=http://localhost:8080

# ===== SECURITY CONFIGURATION =====
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30
SESSION_TIMEOUT=30

# ===== TWO-FACTOR AUTHENTICATION =====
TFA_ISSUER_NAME=AuthServer
TFA_QR_WIDTH=200
TFA_QR_HEIGHT=200

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8081

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000

# ===== EMAIL SETTINGS =====
EMAIL_VERIFICATION_EXPIRY=24
PASSWORD_RESET_EXPIRY=2
EMAIL_FROM_NAME=Authentication Server
EMAIL_FROM_ADDRESS=noreply@authserver.com

# ===== FEATURE FLAGS =====
OAUTH2_ENABLED=true
TFA_ENABLED=true
EMAIL_VERIFICATION_ENABLED=true
PASSWORD_RESET_ENABLED=true
USER_REGISTRATION_ENABLED=true

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/authentication-server.log

# ===== BUSINESS RULES =====
MAX_USER_SESSIONS=5
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRY_DAYS=90

# ===== NOTIFICATIONS =====
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# ===== SPRING PROFILES =====
SPRING_PROFILES_ACTIVE=development

# ===== DATABASE POOL SETTINGS =====
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ===== JPA SETTINGS =====
JPA_DDL_AUTO=update
SHOW_SQL=false
FORMAT_SQL=false

# ===== SSL CONFIGURATION (for production) =====
# SSL_KEYSTORE_PASSWORD=your-keystore-password

# ===== EXAMPLES FOR DIFFERENT ENVIRONMENTS =====

# Development Example:
# DATABASE_TYPE=h2
# SPRING_PROFILES_ACTIVE=development
# LOG_LEVEL=DEBUG
# SHOW_SQL=true

# Production Example:
# DATABASE_TYPE=postgresql
# DATABASE_HOST=your-prod-db-host
# SPRING_PROFILES_ACTIVE=production
# LOG_LEVEL=WARN
# SHOW_SQL=false
# JPA_DDL_AUTO=validate

# Testing Example:
# DATABASE_TYPE=h2
# DATABASE_NAME=testdb
# SPRING_PROFILES_ACTIVE=testing
# JWT_EXPIRATION_MS=3600000
